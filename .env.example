# Database - Neon PostgreSQL
DATABASE_URL=postgresql://YOUR_USER:YOUR_PASSWORD@YOUR_HOST:5432/YOUR_DB?sslmode=require
PGHOST=YOUR_HOST
PGDATABASE=YOUR_DB
PGUSER=YOUR_USER
PGPASSWORD=YOUR_PASSWORD
PGSSLMODE=require
PGCHANNELBINDING=require

# Redis
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=your-secret-key-here-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Domain Configuration
BASE_URL=http://localhost:8000
SHORT_DOMAIN=http://localhost:8000

# Platform Settings
PLATFORM_FEE_RATE=0.20
MIN_PAYOUT_AMOUNT=50.00
DEFAULT_COOKIE_WINDOW_DAYS=7

# Affiliate Networks (Add your actual keys here)
SHOPIFY_WEBHOOK_SECRET=
REFERSION_API_KEY=
IMPACT_ACCOUNT_SID=
IMPACT_AUTH_TOKEN=
AMAZON_ASSOCIATE_TAG=
LEVANTA_API_KEY=

# Payment Providers
STRIPE_SECRET_KEY=
PAYPAL_CLIENT_ID=
PAYPAL_SECRET=

# Auth
JWT_SECRET=your-jwt-secret-here-change-this-in-production
OAUTH_CLIENT_ID=
OAUTH_CLIENT_SECRET=

# Monitoring
SENTRY_DSN=

# Rate Limiting
RATE_LIMIT_CLICKS=100
RATE_LIMIT_API=1000

# CORS Settings (comma-separated origins or * for all)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,https://skin.st

# Environment (development, staging, production)
ENVIRONMENT=development